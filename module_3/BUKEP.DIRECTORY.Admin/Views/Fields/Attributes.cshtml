@model List<AttributeViewModel>

@{
    ViewData["Title"] = "Attributes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Атрибуты поля данных</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Attributes">
            @for (int i = 0; i < Model?.Count; i++)
            {
                <div class="form-group">
                    <label class="control-label">@Model[i].Description (@Model[i].Name)</label>
                    <input asp-for=@Model[i].Id type="hidden" />
                    <input asp-for=@Model[i].Name type="hidden" />
                    <input asp-for=@Model[i].Description type="hidden" />
                    <input asp-for=@Model[i].Value class="form-control" />
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" asp-route-fieldId="@ViewBag.FieldId" asp-route-sourceId="@ViewBag.SourceId"  asp-route-providerId="@ViewBag.ProviderId"/>
                <a asp-action="Index" asp-route-sourceId="@ViewBag.SourceId"  class="btn btn-primary">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
