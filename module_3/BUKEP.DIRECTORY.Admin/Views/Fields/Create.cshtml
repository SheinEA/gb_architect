@model FieldViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Новое поле</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.Hidden("DataSourceId", (int)ViewBag.SourceId)

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataType" class="control-label"></label>
                <input asp-for="DataType" class="form-control" />
                <span asp-validation-for="DataType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
