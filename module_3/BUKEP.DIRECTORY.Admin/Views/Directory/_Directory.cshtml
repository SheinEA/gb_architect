@model DirectoryViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="AccessObjectId" class="control-label"></label>
    <input asp-for="AccessObjectId" class="form-control" />
    <span asp-validation-for="AccessObjectId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="SourceId" class="control-label"></label>
    <select asp-for="SourceId" class="form-control" asp-items="@ViewBag.DataSources"></select>
    <span asp-validation-for="SourceId" class="text-danger"></span>
</div>