@model IEnumerable<AttributeViewModel>

@{
	ViewData["Title"] = "AddAttribute";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddAttribute</h1>

@*<p>
		<a asp-action="Create">Create New</a>
	</p>*@
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@*@Html.ActionLink("Добавить", "AddSourceAttribute", new { providerId = 1, attributeId = item.Id })*@
					@using (Html.BeginForm("AddSourceAttribute"))
					{
						@Html.Hidden("providerId", (int)ViewBag.ProviderId)
						@Html.Hidden("attributeId", item.Id)
						<input type="submit" value="Добавить" class="btn btn-primary"/>
					}
				</td>
			</tr>
		}
	</tbody>
</table>

